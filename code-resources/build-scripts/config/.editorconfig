{
  root = true

  [*]
  charset = utf-8
  insert_final_newline = true
  end_of_line = lf
  indent_style = space
  indent_size = 2
  max_line_length = 80
  trim_trailing_whitespace = true

  [{*.md,*.yml,*.json}]
  indent_size = 2
  indent_style = space

  [*.md]
  trim_trailing_whitespace = false

  [{*.css,*.scss}]
  charset = utf-8
  indent_size = 2
  indent_style = space
  trim_trailing_whitespace = true
  insert_final_newline = true

  [*.js]
  charset = utf-8
  indent_size = 2
  indent_style = tab
  insert_final_newline = true
  trim_trailing_whitespace = true

  [{package.json,.jshintrc}]
  indent_size = 2
  indent_style = space
}
